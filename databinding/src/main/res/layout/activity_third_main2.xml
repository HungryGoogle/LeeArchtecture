    <data>
        <import type="deepin.databinding.third.StyleBean"/>

        <variable
            name="style"
            type="StyleBean"/>
    </data>

    <LinearLayout
        android:background="@{style.night}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
